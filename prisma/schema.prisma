generator client {
  provider = "sqlite"
  url      = "file:./dev.db"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Questao {
  id                String   @id @default(cuid())
  enunciado         String
  alternativas      String
  alternativaCorreta Int
  explicacao        String
  dificuldade       String
  topicoId          String
  tipo              String?
  ano               Int?
  fonte             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Topico {
  id         String   @id @default(cuid())
  nome       String
  disciplina String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
